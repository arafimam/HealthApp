<% layout('/layouts/boilerplate') %>

<div class="card">
    <div class="card-body">
      
      <h6 class="card-subtitle mb-2 text-muted">Calorie Tracker</h6>
      <p class="card-text">Tell us about your calorie intake so we can suggest if you should consume more or less calories!</p>
      
      <form action="/diet" method="post" novalidate class="validated-form">
        <div class="row g-4">
            <div class="col">
                <label> How many calories did you consume in breakfast?</label>
                <input class="form-control" type="number" name="breakfastCal" placeholder="(eg. 1200)" required>
                <div class="valid-feedback">
                    Looks Good!
                  </div>
            </div>
            <div class="col">
                <label> How many calories did you consume in lunch?</label>
                <input class="form-control" type="number" name="lunchCal" placeholder="(eg. 1500)" required>
                <div class="valid-feedback">
                    Looks Good!
                  </div>
            </div>
            <div class="col">
                <label> How many calories did you consume in dinner? </label>
                <input class="form-control" type="number" name="dinnerCal" placeholder="(eg. 700)") required>
                <div class="valid-feedback">
                    Looks Good!
                  </div>
              </div>

              <div class="col">
                <label> How many additional calories did you consume? (snacks etc). </label>
                <input class="form-control" type="number" name="otherCal" placeholder="(eg. 700)") required>
                <div class="valid-feedback">
                    Looks Good!
                  </div>
              </div>
        </div>

        <div class="d-flex justify-content-center mt-3">

            <button type="submit" class="btn btn-outline-warning ">Check</button>

        </div>
        
    
    </form>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
        <h5 class="card-header mb-2 text-muted text-center">Our Suggestion</h5>
        <div class="card-text text-center">

            <% if (message != ""){ %>
                <h5><span class="badge text-bg-light"><%= message %></span></h5>
            <% } %>
        </div>

        <div class="d-flex justify-content-center mt-3">
        <a href="/exercise" class="btn btn-outline-info">Check Exercise Suggestion</a>
        </div>
    </div>

  </div>



